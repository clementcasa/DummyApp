<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:statusBarColor">@color/black</item>
        <item name="materialButtonOutlinedStyle">@style/Widget.MaterialComponents.Button.OutlinedButton.NoInsets</item>
        <item name="toolbarNavigationButtonStyle">@style/Toolbar.Button.Navigation.Tinted</item>
    </style>

    <style name="Toolbar.Button.Navigation.Tinted" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="tint">@color/colorPrimaryDark</item>
    </style>

    <style name="Widget.MaterialComponents.Button.OutlinedButton.NoInsets" parent="Widget.MaterialComponents.Button.OutlinedButton" >
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="PrimaryButton" parent="Widget.MaterialComponents.Button.OutlinedButton.NoInsets">
        <item name="android:textAllCaps">false</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="rippleColor">@color/light_blue</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:padding">0dp</item>
        <item name="android:letterSpacing">0</item>
        <item name="strokeColor">@color/colorPrimary</item>
        <item name="strokeWidth">1dp</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="Widget.MaterialComponents.ShapeableImageView.CornerRadius8">
        <item name="cornerSize">8dp</item>
    </style>

    <style name="Widget.MaterialComponents.ShapeableImageView.CornerRadius20">
        <item name="cornerSize">20dp</item>
    </style>
</resources>